<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="80dp"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="姓    名"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/name"
                    android:layout_weight="20"
                    android:maxLength="20" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="性    别"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/sex"
                    android:layout_weight="20" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="年    龄"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/age"
                    android:layout_weight="20" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="学    校"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/school"
                    android:layout_weight="20" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="民    族"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/nation"
                    android:layout_weight="20" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="专    业"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/specialty"
                    android:layout_weight="20" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="电 话 号"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/phone"
                    android:layout_weight="20" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="身份证号"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/idcard"
                    android:layout_weight="20" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="研究方向"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/direction"
                    android:layout_weight="20" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_weight="1"
                    android:text="个人简介"
                    android:textColor="#000000"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/introduct"
                    android:layout_weight="20" />
            </TableRow>
        </TableLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:gravity="center"
                android:text="确认修改"
                android:textColor="#0c3fe6"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignBottom="@id/yes"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/yes"
                android:text="取消修改"
                android:textSize="12dp"
                android:textColor="#000000"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>